<main>
  <h1>Account Management</h1>
  <% if (message) { %>
    <p class="flash-message">
      <%= message %>
    </p>
    <% } %>

      <!-- Greeting based on account type -->
      <h2>Welcome <%= accountData.account_firstname %>
      </h2>

      <!-- Update Account Link (visible to all) -->
      <p class="management-options">
        <a href="/account/update/<%= accountData.account_id %>" class="btn btn-primary">
          Update Account Information
        </a>
      </p>

      <!-- Inventory Management Section (Employee/Admin only) -->
      <% if (accountData.account_type==='Employee' || accountData.account_type==='Admin' ) { %>
        <div class="management-options">
          <h3>Inventory Management</h3>
          <p>
            <a href="/inv/management" class="btn btn-primary">Manage Inventory</a>
          </p>
        </div>
        <% } %>
</main>