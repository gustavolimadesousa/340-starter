<div class="login-container">
  <h1>
    <%= title %>
  </h1>

  <% if (message && message.length> 0) { %> <!-- Ensure message exists and has content -->
    <div class="flash-message">
      <%- message %>
    </div>
    <% } %>

      <form action="/account/login" method="post" class="login-form">
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required>

        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" required pattern="(?=.*\d)(?=.*[A-Z])(?=.*\W).{12,}" title="Must be at least 12 characters long, include at least one uppercase letter, one number, and one special character.">
        <p class="password-requirements">Must be at least 12 characters, include one uppercase letter, one number, and one special character.</p>

        <button type="submit">Login</button>
      </form>

      <p class="register-link">Don't have an account? <a href="/account/register">Register here</a></p>
    </div>